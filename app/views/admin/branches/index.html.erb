<% title 'Branches' %>
<% breadcrumb :admin_branches, @business_unit %>
<% content_for(:hero_right) do %>
  <%= link_to 'Edit business unit', [:edit, :admin, @organisation, @business_unit], class: 'button' %>
  <%= link_to 'New branch', [:new, :admin, @organisation, @business_unit, :branch], class: 'button is-primary' %>
<% end %>

