<%= simple_form_for([:admin, partner_category]) do |f| %>
  <div class="card">
    <div class="card-content">
      <%= f.input :title %>

      <div class="columns">
        <% if partner_category.photo && partner_category.photo.image.present? %>
          <div class="column is-narrow">
            <%= image_tag partner_category.photo.image.thumb.url, class: 'img-fluid' %>
          </div>
        <% end %>
        <div class="column">
          <%= f.simple_fields_for :photo do |pf| %>
            <%= pf.input :image, as: :bulma_file %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="card mt-1 mb-1">
    <div class="card-content">
      <%= f.submit class: 'button is-primary' %>
    </div>
  </div>

  <% if partner_category.persisted? %>
    <%= link_to 'Delete category', [:admin, partner_category], method: :delete, data: { confirm: 'Are you sure?' }, class: 'button is-text has-text-danger' %>
  <% end %>
<% end %>
